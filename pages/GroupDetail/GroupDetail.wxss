/* pages/GroupDetail/GroupDetail.wxss */
.top_img{
  /* border: 1rpx solid red; */
  text-align: center;
}
.top_img image{
  width: 200rpx;
  height: 200rpx;
  padding: 20rpx;
  /* border: 1px solid red; */
}
.top_img text{
  display: block;
  padding: 0rpx 20rpx;
  font-size: 32rpx;
}
.item_info_list{
  width: 100%;
  /* border: 1px solid blue; */
  display: flex;
  float: left;
  color: #333;
  /* flex-direction: column; */
  justify-content: center;
}
.item_info_list .item_info_item{
  width: 33%;
  /* border: 1px solid red; */
  text-align: center;
}
.item_info_list .item_info_item text{
  display: block;
  font-size: 24rpx;
  padding: 5rpx 8rpx;
}
.item_info_list .item_info_item .item_info_item_num{
  color: red;
}
.item_info_list .item_info_item .item_info_item_label{
  color: #999;
}

/* 页面切换样式部分  开始 */
.tabItem{
  background-color: #fff;
  /* overflow: auto; */
  display: block;
}
.slide-image{
  width: 100%;
  padding: 20rpx 0;
  margin: 10rpx 0;
}
/* 品牌介绍 */
.introduce_detail{
  display: block;
  padding: 20rpx;
  font-size: 26rpx;
  line-height: 38rpx;
  letter-spacing: 5rpx;
  overflow: auto;
  color: #333;
}
.introduce_title{
  /* border: 1px solid red; */
  margin-top: 100rpx;
  padding: 10rpx 20rpx;
}
.introduce_title .title_name{
  /* border-left: 10rpx solid #4395FF; */
  font-size: 32rpx;
  /* padding-left: 10rpx; */
}
/* 表格 */
.table {
  border: 1rpx solid #cfcfcf;
}
.tr {
  display: flex;
  width: 100%;
  justify-content: center;
  height: 2rem;
  align-items: center;
  font-size: 28rpx;
}
.td {
  width: 40%;
  justify-content: center;
  border: 1rpx solid #efefef;
  color: #666;
  display: flex;
  height: 2rem;
  align-items: center;
}
.th {
  width: 40%;
  justify-content: center;
  border: 1rpx solid #efefef;
  color: #666;
  display: flex;
  height: 2rem;
  align-items: center;
}

/* 评论列表 */
.comment_item{
  /* border: 1px solid red; */
  padding: 20prx ;
  overflow: auto;
  width: 100%;
}
.comment_item_img image{
  width: 50rpx;
  height: 50rpx;
  border-radius: 50rpx;
  float: left;
  padding: 10rpx 10rpx 10rpx 20rpx;
}
.comment_item_img .comment_user{
  float: left;
  overflow: auto;
  /* border: 1px solid blue; */
}
.comment_item_img .comment_user text{
  display: block;
  color: #333;
  font-size: 24rpx;
}
.comment_item_img .comment_right{
  float: right;
  margin-right: 20rpx;
}
.comment_item_img .comment_right image{
  width: 30rpx;
  height: 30rpx;
  margin-top: 10rpx;
}
.comment_item_img .comment_right text{
  color: red;
  font-size: 24rpx;
  display: inline-block;
  border: 1rpx solid red;
  margin-top: 20rpx;
  padding: 10rpx;
  border-radius: 10rpx;
}
.comment_descr{
  font-size: 26rpx;
  color: #333;
  padding: 20rpx;
  border-bottom: 1rpx solid #efefef;
}
.comment_descr text{
  display: inline-block;
  padding: 10rpx 0;
}
.comment_descr .comment_img{
  overflow: auto;
}
.comment_descr .comment_img image{
  float: left;
  width: 100%;
}

.top_title_right{
  /* border-left: 1rpx solid #efefef; */
  float: right;
  width: 100%;
  /* margin: 40rpx 30rpx 40rpx 0; */
  padding-right: 30rpx;
  font-size: 24rpx;
  color: #333;
}
.top_title_right image{
  width: 30rpx;
  height: 30rpx;
}
.top_title_right text{
  /* display: block; */
}
.top_title_right .title_right_right{
  float: right;
  padding: 0 10rpx;
  /* width: 50%; */
  text-align: center;
  /* border: 1px solid red; */
}
.top_title_right .title_right_right image{
  padding: 0rpx 10rpx;
}
.top_title_right .title_right_right text{
  display: inline-block;
}

.comment_descr .comment_img{
  overflow: auto;
}
.comment_descr .comment_img image{
  float: left;
  width: 100%;
}
/* 精彩瞬间 */
.comment_descr .comment_imgs{
  overflow: auto;
}
.comment_descr .comment_imgs image{
  float: left;
  max-width: 120rpx;
  max-height: 120rpx;
  padding: 0 10rpx;
}

.btn{
  width: 400rpx;
  height: 80rpx;
  line-height: 80rpx;
  border: none;
  border-radius: 80rpx;
  background-color: #4395FF;
  color: #fff;
  font-size: 28rpx;
  margin: 30rpx auto 60rpx auto;
}