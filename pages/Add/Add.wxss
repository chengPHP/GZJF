/* tab列表部分 */
.tab_view{
  position: fixed;
  width: 100%;
  /* border: 1px solid red; */
  bottom: 180rpx;
  /* margin: 15rpx 0; */
}
.tab_list{
  width: 100%;
  display: flex;
  padding-bottom: 50rpx;
}
.tab_list .tab_item{
  /* float: left; */
  display: inline-block;
  overflow: auto;
  text-align: center;
  width: 25%;
  padding: 10rpx 2%;
  /* border: 1rpx solid red; */
}
.tab_list .tab_item .tab_img{
  width: 100rpx;
  height: 100rpx;
}
.tab_list .tab_item text{
  display: block;
  font-size:32rpx;
  color: #333;
}

.close{
  position: absolute;
  /* border: 1px solid red; */
  bottom: 50rpx;
  text-align: center;
  width: 100%;
}
.close image{
  width: 50rpx;
  height: 50rpx;
}
.close text{
  display: block;
  font-size: 28rpx;
  color: #666;
}